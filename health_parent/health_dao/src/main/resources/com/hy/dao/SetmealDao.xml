<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hy.dao.SetmealDao">

    <insert id="insert">
        <selectKey resultType="int" keyProperty="id" keyColumn="id" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into t_setmeal
        values
        (#{id},#{name},#{code},#{helpCode},#{sex},#{age},#{price},#{remark},#{attention},#{img})
    </insert>

    <insert id="insertSetmealCheckgroup">
            insert into
            t_setmeal_checkgroup
            values (#{setmealId},#{checkgroupId})
    </insert>

    <update id="updateOne">
        update t_setmeal
        set
        name=#{name},code=#{code},helpCode=#{helpCode},sex=#{sex},age=#{age},price=#{price},remark=#{remark},attention=#{attention},img=#{img}
        where
        id=#{id}
    </update>

    <delete id="deleteRelationship">
        delete from t_setmeal_checkgroup
        where setmeal_id=#{setmealId}
    </delete>

    <delete id="delete">
        delete from t_setmeal
        where id=#{id}
    </delete>

    <select id="findSetmealByParams" resultType="com.hy.pojo.Setmeal">
        select * from t_setmeal
        <where>
            <if test="queryString!=null and queryString.length()>0">
                code like "%" #{queryString} "%"
                or name like "%" #{queryString} "%"
                or helpCode like "%" #{queryString} "%"
            </if>
        </where>

    </select>

    <select id="findById" resultType="com.hy.pojo.Setmeal">
        select * from t_setmeal
        where id=#{id}
    </select>

    <select id="findCheckgroupIdsBySetmealId" resultType="java.lang.Integer">
        select checkgroup_id
        from t_setmeal_checkgroup
        where setmeal_id=#{setmealId}
    </select>

    <select id="countUsedBySetmealId" resultType="java.lang.Long">
        select count(0) from t_order
        where setmeal_id=#{id}

    </select>

    <resultMap id="detailMap" type="com.hy.pojo.Setmeal">
        <id property="id" column="id"></id>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="helpCode" column="helpCode"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="price" column="price"/>
        <result property="remark" column="remark"/>
        <result property="attention" column="attention"/>
        <result property="img" column="img"/>
        <collection property="checkGroups" ofType="CheckGroup">
            <id property="id" column="tcId"/>
            <result property="name" column="tcName"/>
            <result property="remark" column="tcRemark"/>
            <collection property="checkItems" ofType="CheckItem">
                <id property="id" column="tciId" />
                <result property="name" column="tciName"/>
            </collection>
        </collection>
    </resultMap>

    <select id="findDetailById" resultMap="detailMap" parameterType="int">
          select
          ts.id,
          ts.name,
          ts.remark,
          ts.sex,
          ts.age,
          ts.img,
          tc.id tcId,
          tc.name tcName,
          tc.remark tcRemark,
          tci.id tciId,
          tci.name tciName
          from t_setmeal ts,
          t_setmeal_checkgroup tsc,
          t_checkgroup tc ,
          t_checkgroup_checkitem tcc,
          t_checkitem tci
          WHERE
          ts.id=tsc.setmeal_id
          and tc.id=tsc.checkgroup_id
          and tc.id=tcc.checkgroup_id
          and tci.id=tcc.checkitem_id
          and ts.id=#{id}
    </select>
    <select id="findAllImg" resultType="java.lang.String">
        select img from t_setmeal
    </select>
</mapper>